#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "background sky.png"
            Rectangle:
                size: self.width, 501
                pos: self.pos[0], self.pos[1] + self.height - 501
                texture: self.clouds_texture
            Rectangle:
                size: self.width, 100
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture
